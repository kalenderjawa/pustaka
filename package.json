{
  "name": "@kalenderjawa/pustaka",
  "version": "1.0.0",
  "description": "Pustaka JavaScript untuk perhitungan, pengkonversian dan penanggalan Kalender Jawa Abadi",
  "type": "module",
  "main": "dist/kalenderjawa.min.cjs",
  "module": "dist/kalenderjawa.min.js",
  "browser": "dist/kalenderjawa.browser.min.js",
  "exports": {
    ".": {
      "require": "./dist/kalenderjawa.min.cjs",
      "import": "./dist/kalenderjawa.min.js",
      "browser": "./dist/kalenderjawa.browser.min.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "scripts": {
    "build": "vite build",
    "build:rollup": "bunx rollup --config",
    "sync-lib": "cp dist/kalenderjawa.min.js lib/kalenderjawa.min.js && cp dist/kalenderjawa.min.cjs lib/kalenderjawa.min.cjs && cp dist/kalenderjawa.browser.min.js lib/kalenderjawa.browser.min.js",
    "build:all": "npm run build && npm run sync-lib",
    "dev": "vite build --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "doc": "typedoc src/index.ts --out docs",
    "serve": "vite preview",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run test && npm run build:all",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalenderjawa/pustaka.git"
  },
  "keywords": [
    "kalender",
    "jawa",
    "lambang",
    "windu",
    "pawukon",
    "sengkala",
    "kalender jawa",
    "pasaran",
    "candra sengkala",
    "penanggalan",
    "dinten",
    "dino",
    "tahun jawa",
    "penanggalan jawa",
    "kalender jawa abadi"
  ],
  "author": "Equan Pr.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kalenderjawa/pustaka/issues"
  },
  "homepage": "https://github.com/kalenderjawa/pustaka#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "np": "^10.0.10",
    "prettier": "^3.3.3",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "terser": "^5.36.0",
    "typedoc": "^0.26.11",
    "typescript": "^5.8.3",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@kalenderjawa/pancawara": "^1.0.0",
    "@kalenderjawa/saptawara": "^1.3.0"
  }
}
